# UHD Slave Configuration
# Copy this file to .env and fill in the values

# UHDadmin API URL (required)
UHDADMIN_URL=https://admin.example.com

# App Token for authentication (required)
# Generate this in UHDadmin -> Slave Management -> Create Token
APP_TOKEN=your_app_token_here

# Listen ports
LISTEN_PORT=8443
LISTEN_HTTP_PORT=8080

# SSL certificate paths (host paths, mounted into container)
SSL_CERT_PATH=./certs/cert.pem
SSL_KEY_PATH=./certs/key.pem

# Timer intervals (seconds) - optional, defaults shown
CONFIG_PULL_INTERVAL=30
TELEMETRY_FLUSH_INTERVAL=60
QUOTA_SYNC_INTERVAL=300
HEARTBEAT_INTERVAL=60
